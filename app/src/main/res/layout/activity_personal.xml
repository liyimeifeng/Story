<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eaeaeb"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.thinkpaduser.myapplication.PersonalActivity">
<ImageView
    android:id="@+id/activity_personal_iv_avatar"
    android:layout_width="96dp"
    android:layout_height="96dp"
    android:layout_gravity="center_horizontal"
    android:scaleType="centerCrop"
    android:src="@drawable/icon_portrait"/>
    <TextView
        android:id="@+id/activity_personal_tv_userid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#fffff9"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:textSize="16sp"
        android:hint="账号："/>
    <TextView
        android:id="@+id/activity_personal_tv_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#fffff9"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:text="昵称："
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/activity_personal_tv_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#fffff9"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:textSize="16sp"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        />
    <TextView
        android:id="@+id/activity_personal_tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#fffff9"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:textSize="16sp"
        android:hint="邮箱："
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"/>
    <TextView
        android:id="@+id/activity_personal_tv_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="#fffff9"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:textSize="16sp"
        android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:hint="生日："/>
    <Button
        android:id="@+id/activity_personal_but_changepassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="修改密码"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:textAppearanceMedium"
        android:background="@drawable/icon_personal_button"
        />
    <Button
        android:id="@+id/activity_personal_but_quit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="退出登录"
        android:textColor="#FFFFFF"
        android:textAppearance="?android:textAppearanceMedium"
        android:background="@drawable/icon_personal_button"
        />
</LinearLayout>
