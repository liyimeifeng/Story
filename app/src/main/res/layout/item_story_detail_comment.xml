<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:fresco = "http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="2dp"
    android:layout_marginLeft="2dp"
    card_view:cardMaxElevation="2dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="2dp"
    card_view:contentPaddingBottom="8dp"
    card_view:contentPaddingLeft="6dp"
    card_view:contentPaddingTop="6dp"
    card_view:contentPaddingRight="6dp"
    card_view:cardUseCompatPadding="true"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_story_detail__comment_portrait"
            android:layout_width="48dp"
            android:layout_height="48dp"
            fresco:fadeDuration="300"
            fresco:actualImageScaleType="focusCrop"
            fresco:placeholderImage="@drawable/icon_portrait"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:roundAsCircle="true"
            fresco:roundingBorderWidth="3dp"
            fresco:roundingBorderColor="#fff00e"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_story_detail__comment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打酱油的"
                android:textAppearance="?android:textAppearanceMedium"/>
            <TextView
                android:id="@+id/item_story_detail__comment_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="内容"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/item_story_detail__comment_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="时间2014年"/>
</LinearLayout>
</android.support.v7.widget.CardView>