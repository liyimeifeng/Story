<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view = "http://schemas.android.com/apk/res-auto"
        xmlns:fresco = "http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardMaxElevation="3dp"
        card_view:cardCornerRadius="8dp"
        card_view:contentPaddingBottom="8dp"
        card_view:contentPaddingLeft="8dp"
        card_view:contentPaddingTop="8dp"
        card_view:contentPaddingRight="8dp"
        card_view:cardUseCompatPadding="true">
        <FrameLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/manzu"
                android:scaleType="centerCrop" />
            <TextView
                android:id="@+id/item_more_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|top"
                android:padding="8dp"
                android:text="我是90后"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:textColor="#FFFFFF" />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_my_story_header_portarit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="centerCrop"
                fresco:roundAsCircle="true"
                fresco:placeholderImage="@drawable/icon_portrait"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:fadeDuration="300"
                fresco:actualImageScaleType="focusCrop"
                fresco:roundingBorderWidth="3dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="24dp"
                android:layout_marginRight="16dp" />
            <TextView
                android:id="@+id/item_my_story_header_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大哥爱跑堂"
                android:layout_gravity="bottom|right"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="24dp" />
        </FrameLayout>

    </android.support.v7.widget.CardView>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
    <EditText
        android:id="@+id/item_my_story_header_et_signature"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
       android:background="@null"
        android:text="个人签名跑了一年大堂挣钱累"
        android:textAppearance="?android:textAppearanceSmall"
        android:visibility="gone"
        />
        <TextView
            android:id="@+id/item_my_story_header_tv_signature"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="24dp"
            android:paddingLeft="16dp"
            android:text="我的签名"/>
        <Button
            android:id="@+id/item_my_story_header_bu_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:visibility="visible"
            android:background="@drawable/ic_create_black_24dp"
            />
          <Button
              android:id="@+id/item_my_story_header_bu_finish"
              android:layout_width="32dp"
              android:layout_height="32dp"
              android:visibility="gone"
              android:gravity="center_vertical"
              android:background="@drawable/ic_done_black_24dp"
              />
      </LinearLayout>
</FrameLayout>

</LinearLayout>