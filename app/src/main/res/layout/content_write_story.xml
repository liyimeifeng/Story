<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_write_story_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.thinkpaduser.myapplication.WriteStoryActivity"
    tools:showIn="@layout/activity_write_story">

   <android.support.design.widget.TextInputLayout
       android:id="@+id/content_write_story_textInputLayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="写下你的故事。。。。"
       app:hintTextAppearance="?android:textAppearanceMedium"
       >
       <EditText
           android:id="@+id/content_write_story_et_writestory"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
            android:ems="8"
           android:gravity="left|top"
           android:inputType="textMultiLine"
           android:lines="5" />
   </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上传图片"
        android:textAppearance="?android:textAppearanceMedium"/>

    <com.google.android.flexbox.FlexboxLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        android:id="@+id/content_write_story_flexBoxLayout"
        app:flexWrap="wrap"
        app:alignItems="stretch"
        app:alignContent="stretch">

       <ImageView
           android:id="@+id/content_write_story_iv_image"
           android:layout_width="96dp"
           android:layout_height="96dp"
           android:scaleType="centerCrop"
           android:src="@drawable/ic_add_black_24dp"/>
   </com.google.android.flexbox.FlexboxLayout>

</LinearLayout>

