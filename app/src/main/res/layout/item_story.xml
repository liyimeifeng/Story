<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view = "http://schemas.android.com/apk/res-auto"
    xmlns:fresco = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardMaxElevation="3dp"
    card_view:cardCornerRadius="8dp"
    card_view:contentPaddingBottom="8dp"
    card_view:contentPaddingLeft="8dp"
    card_view:contentPaddingTop="8dp"
    card_view:contentPaddingRight="8dp"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_story_sdv__portrait"
        android:layout_width="48dp"
        android:layout_height="48dp"
        fresco:fadeDuration="300"
        fresco:actualImageScaleType="focusCrop"
        fresco:placeholderImage="@drawable/icon_portrait"
        fresco:placeholderImageScaleType="fitCenter"
        fresco:roundAsCircle="true"
        fresco:roundingBorderWidth="3dp"
        fresco:roundingBorderColor="#fff00e"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/item_story_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="昵称"
            android:textColor="#030303"
            android:textStyle="bold"
            android:maxEms="5"
            android:maxLines="1"
           />
        <TextView
            android:id="@+id/item_story_tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="30分钟前"
            />
    </LinearLayout>
    <TextView
       android:id="@+id/item_story_tv__city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="成都"
        android:maxLines="1"
        android:maxEms="8"/>
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_story_iv__image0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                fresco:fadeDuration="300"
                fresco:actualImageScaleType="focusCrop"
                fresco:placeholderImage="@drawable/loading"
                fresco:placeholderImageScaleType="fitCenter"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_story_iv__image1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                fresco:fadeDuration="300"
                fresco:actualImageScaleType="focusCrop"
                fresco:placeholderImage="@drawable/loading"
                fresco:placeholderImageScaleType="fitCenter"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_story_iv__image2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                fresco:fadeDuration="300"
                fresco:actualImageScaleType="focusCrop"
                fresco:placeholderImage="@drawable/loading"
                fresco:placeholderImageScaleType="fitCenter"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_story_iv__image3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:visibility="visible"
                fresco:fadeDuration="300"
                fresco:actualImageScaleType="focusCrop"
                fresco:placeholderImage="@drawable/loading"
                fresco:placeholderImageScaleType="centerCrop"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_story_iv__image4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                fresco:fadeDuration="300"
                android:visibility="visible"
                fresco:actualImageScaleType="focusCrop"
                fresco:placeholderImage="@drawable/loading"
                fresco:placeholderImageScaleType="centerCrop"
                />
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_story_iv__image5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:adjustViewBounds="true"
                fresco:fadeDuration="300"
                fresco:actualImageScaleType="focusCrop"
                fresco:placeholderImage="@drawable/loading"
                fresco:placeholderImageScaleType="centerCrop"
                />
        </LinearLayout>


    <TextView
        android:id="@+id/item_story_tv__content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="一段话话话话话话话话话话话话哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈话话话话话话话话话话话话哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈哈啊哈哈哈哈哈话话话哈哈哈啊哈哈哈哈哈话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话话"/>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
           >
        <TextView
            android:id="@+id/item_story_tv__comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableLeft="@drawable/icon_talk"
            android:text="评论"/>
        <TextView
            android:id="@+id/item_story_tv__share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="转发"
            android:drawableLeft="@drawable/icon_share"/>
        <TextView
            android:id="@+id/item_story_tv__favour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="点赞"
            android:drawableLeft="@drawable/icon_heart"/>
    </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>